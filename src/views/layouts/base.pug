if !varForLang
  include ../i18n/en

block page_variables


doctype html
html(lang=app.lang)
  include ../shared/head
  block head

  body
    noscript: iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-MGWM8RL" height="0" width="0" style="display:none;visibility:hidden")
    .app-preloader
      .app-preloader__circle
        .app-preloader__circle-inner

    .app(class=page_class)
      .header-wrapper
        a(href="https://beta.membrana.io/staking" target="_blank").header__anchor
          p.header__anchor-desc Staking rewards for token holders in BTC and MBN: earn up to 3% per November. <u>Join</u>
        header.header
          .logo
            if page_class === 'index' 
              .logo__link: img.logo__image(src="/static/img/logo.svg" alt=app.head.title)
            else
              a.logo__link(href=`/`): img.logo__image(src="/static/img/logo.svg" alt=app.head.title)
          nav.nav
            ul.nav__list
              each item in app.nav
                li.nav__item(class={"active": page_active && item.link && item.link.match(page_active) })
                  if item.isQuickGuide === true
                    a.nav__link.quick-guide-btn(href="javascript:void(0)" data-open-modal="video")
                      img.quick-guide-btn__icon.js-prevent-inline(src="/static/img/icons/play.svg" alt="") 
                      span.quick-guide-btn__text!=item.title
                  else
                    a.nav__link(href=item.link)!=item.title
          nav.select-language.js-select-language
            a.select-language__current(href="javascript:void(0)")
              if app.lang === 'en'
                img.js-prevent-inline(src="/static/img/icons/eng.svg" alt="")
              if app.lang === 'ru'
                img.js-prevent-inline(src="/static/img/icons/ru.svg" alt="")
              if app.lang === 'jpn'
                img.js-prevent-inline(src="/static/img/icons/jpn.svg" alt="")
              if app.lang === 'chn'
                img.js-prevent-inline(src="/static/img/icons/chn.svg" alt="")
              if app.lang === 'kor'
                img.js-prevent-inline(src="/static/img/icons/kor.svg" alt="")
              if app.lang === 'de'
                img.js-prevent-inline(src="/static/img/icons/de.svg" alt="")
            .select-language__list
              a.select-language__item(href="/" class={'active': app.lang === 'en'})
                img.js-prevent-inline(src="/static/img/icons/eng.svg" alt="")
              a.select-language__item(href="/ru/" class={'active': app.lang === 'ru'})
                img.js-prevent-inline(src="/static/img/icons/ru.svg" alt="")
              a.select-language__item(href="/jpn/" class={'active': app.lang === 'jpn'})
                img.js-prevent-inline(src="/static/img/icons/jpn.svg" alt="")
              a.select-language__item(href="/chn/" class={'active': app.lang === 'chn'})
                img.js-prevent-inline(src="/static/img/icons/chn.svg" alt="")
              a.select-language__item(href="/kor/" class={'active': app.lang === 'kor'})
                img.js-prevent-inline(src="/static/img/icons/kor.svg" alt="")
              a.select-language__item(href="/de/" class={'active': app.lang === 'de'})
                img.js-prevent-inline(src="/static/img/icons/de.svg" alt="")
          a.hamburger.js-hamburger(href="javascript:void(0)") 
            span.hamburger__line
            span.hamburger__line
            span.hamburger__line

