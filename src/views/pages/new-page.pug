extends ../layouts/base

block page_variables
  - var page_class = 'competition-page';
  - var page_active = '/new-page/';

block append head
  block head_variables
    - var title = app.head.competition.title;
    - var description = app.head.competition.description;

block content
  .page-content-pattern

    .competition-wrapper.new-page
      .patterns
        div.pattern.bg
          img.js-prevent-inline(src="/static/img/patterns/competition/bg-page.svg" alt="")
          img.js-prevent-inline.triangle_12(src="/static/img/new-page/mid_bg.svg" alt="")
          img.js-prevent-inline.triangle_21(src="/static/img/new-page/mid_bg2.svg" alt="") 


      .competition
        

        h1.competition__header Get 
          b FREE 100$ 
